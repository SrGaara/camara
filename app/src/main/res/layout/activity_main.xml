<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.srgaara.drawer.camara.MainActivity"
    android:background="#85a4c1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="app de la camara"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/CDMX"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="55dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="girar"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="45dp"
        android:onClick="girarfoto"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="voltear"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="45dp"
        android:onClick="voltearfoto"/>

</android.support.constraint.ConstraintLayout>
